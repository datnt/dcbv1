<style>
  .bs-docs-example:after {
    background-color: #F5F5F5;
    border: 1px solid #DDDDDD;
    border-radius: 4px 0 4px 0;
    color: #9DA0A4;
    content: "Liên hệ";
    font-size: 12px;
    font-weight: bold;
    left: -1px;
    padding: 3px 7px;
    position: absolute;
    top: -1px;
  }
  form.bs-docs-example {
    padding-bottom: 19px;
  }

  .bs-docs-example {
    background-color: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-radius: 4px 4px 4px 4px;
    margin: 15px 0;
    position: relative;
  }


</style>
<%= form_for(@contact, :url => contacts_path , :html => {:multipart => false, :id => "tform", :class => "bs-docs-example",  :style => "padding-left: 10px; padding-top: 30px;" }, :method => 
:post) do |f| %>
  <legend>Đồ chơi Bé vui</legend>
  <label>Họ và tên</label>
  <%= f.text_field :name, :class => "required" %>

  <label>Email</label>
  <%= f.text_field :email, :class => "required email" %>

  <label>Phone</label>
  <%= f.text_field :phone, :class => "required" %>

  <label>Description</label>
  <%= f.text_area :description, :class => "required" %>

  <br/>  
  <%= f.submit "Send", :class => "btn", :id => 'f_submit', :style=>"margin-top:10px" %>
<% end %>


<script type="text/javascript">
  $(document).ready(function() {
    $("#tform").validate({
      meta: "validate"
    });
  });
</script>


