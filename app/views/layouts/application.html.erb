<!DOCTYPE html>
<html>
<head>
  <title>Dcbv1</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body style="background-color: #F1F1F1; padding-top: 0px;">

  <div class="container" style="background-color: #FFFFFF; padding: 10px 30px 30px;">

    <%= notice %>
    <%= alert %>

    <div class="row" style="margin-bottom: 2px;">

      <div class="span6">
        <a href="<%= root_url %>">
          <img src="/images/new_log.png"/>
        </a>
      </div>

      <div class="" style="float: right;">
        <img src="/images/new_log1.png" style="height: 141px; width: 400px;"/>
      </div>

  
    </div>

    <div class="row" style="background-color: #FFCC00; height: 40px; margin-left: 0px; border-radius: 4px;">
      <div class="span4 offset1">
      </div>
      <div class="span2 offset10" style="padding-top: 10px;">
        <a href="#" class="btn btn-primary" style="margin-left: 60px; margin-top: -3px; ;text-decoration:none; color: white;">Liên hệ</a>
      </div>
    </div>

    <div class="row" style="padding-left: 31px; height: 28px;">
      <h3 style="font-size: 12px;">
        Bạn đang xem Đồ Chơi Bé Vui
        <% if @toy %>
          : <%= @toy.name %>
        <% end %>
      </h3>
    </div>
    

    <div class="row-fluid">
      <div class="span3">
        <!--Sidebar content-->
        <%= render :partial => "shared/sidepane" %>
      </div>


      <div class="span9" style="margin-left: 10px;">
        <!--Body content-->
         <%= yield %>
      </div>
    </div>
  </div>


</body>
</html>
